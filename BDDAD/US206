DECLARE 
    sectorID SECTOR.ID%type;
    sectorType SECTOR%rowtype;
    sector Sys_Refcodigo;

begin
    
    CREATESECTOR(1,'Corn Field', 84000, sectorID);
    
    DBMS_OUTPUT.PUT_LINE('New sector ID: ' || sectorID);
end;
    
begin
    sectorCodigo := ORDERSECTORDESIGNATION(1);
    loop
        
        FETCH sectorCodigo into sectorType;
        
        exit when sectorCodigo%notfound;
        
        DBMS_OUTPUT.PUT_LINE(sectorType.ID || '--' || sectorType.DESIGNATION);
    
    end loop;
end;

declare 
    sectorType SECTOR%rowtype;
    sectorCodigo Sys_Refcodigor;
    
begin
    sectorCodigo := ORDERSECTORSIZE(1, 'ASC');
    
    loop
    
        FETCH sectorCodigo into sectorType;

        exit when sectorCodigo%notfound;
        
        DBMS_OUTPUT.PUT_LINE(sectorType.AREA || '--' || sectorType.DESIGNATION);
    
    end loop;
end;

declare 
    productName VARCHAR2(100);
    
    productType VARCHAR2(100);
    
    sectorName VARCHAR2(100);
    
    sectorId SECTOR.ID%type;
    
    sectorCodigo Sys_Refcodigo;

begin
    sectorCursor := ORDERSECTORCROP(1, 'PRODUCT', 'DESC');
    loop
    
        FETCH sectorCodigo into sectorId, sectorName, productName, productType;
        
        exit when sectorCodigo%notfound;
        
        DBMS_OUTPUT.PUT_LINE(productName || '--' || productType || '--' || sectorName);
   
    end loop;

end;